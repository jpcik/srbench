<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} TKD [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>	
	
	<logger name="es.upm.fi.oeg.morph" level="DEBUG" />
	<logger name="org.oxford.comlab" level="DEBUG" />
	
	<logger name="es.upm.fi.oeg.morph.stream.esper.EsperResultSet" level="INFO" />
	<logger name="es.upm.fi.oeg.morp.esper.EsperEngine" level="TRACE" />
	<logger name="es.upm.fi.oeg.morph.stream.translate" level="INFO" />
	<logger name="es.upm.fi.oeg.morph.stream.rewriting.SparqlClausifier" level="TRACE" />
	<logger name="eu.planetdata.srbench" level="DEBUG" />
	<logger name="eu.planetdata.srbench.feed" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
